pipeline {
  agent{
    kubernetes {
      label 'cfr-dpope'
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: alpine-zip
    image: kramos/alpine-zip:latest
    command:
    - cat
    tty: true
      """
    }
  }
  stages {
    stage("Build Prep") {
      steps {
        container("alpine-zip") {
          sh """
            zip --version
          """
        }
      }
    }
  }
}
